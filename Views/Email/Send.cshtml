@model Event_Registration_System.Models.EmailView

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>

}

<h2>Send Email</h2>

<form asp-action="Send" method="post">
    <div class="form-group">
        <label asp-for="ToEmail"></label>
        <input asp-for="ToEmail" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="ToName"></label>
        <input asp-for="ToName" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="TextPart"></label>
        <textarea asp-for="TextPart"></textarea>

    </div>
    <button type="submit">Send Email</button>
</form>




